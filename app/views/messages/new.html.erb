<%= render "/shared/common_header", title: "New Message" %>

<!-- message -->
<%= form_for @message, :method => "post", :html => { :multipart => true } do |form| %>
  <div class="container">
    <div class="row">
      <div>
        <div class="form-group">
          <div class="controls">
            <%= form.text_area :message,:class=> 'form-control', :rows => '7' ,:maxlength =>140 ,:placeholder => "Write New Message"%> <br>
          </div>
        </div>
      </div>
    </div>
  </div>

  <div class="container">
    <div class="row">
      <div class="col-xs-1"></div>
      <div class="col-xs-10 text-center">
        <div class="fileinput fileinput-new" data-provides="fileinput">
          <div class="fileinput-new thumbnail">
            <img class="img-responsive" alt="">
          </div>
          <div class="fileinput-preview fileinput-exists thumbnail" style="max-width: 200px; max-height: 200px;"></div>
          <div>
            <br/>
            <span class="btn btn-default btn-file btn-info"><span class="fileinput-new">Image</span><span class="fileinput-exists">Change</span>
              <%= form.file_field :attached_img %>
            </span>
            <a href="#" class="btn btn-default fileinput-exists" data-dismiss="fileinput">Cancel</a>
          </div>
        </div>
      </div>
      <div class="col-xs-1"></div>
    </div>
  </div>

  <% if @current_user.user_type %>
  <hr/>
  <div class="container">
    <div class="row">
      <div class="col-xs-1"></div>
      <div class="col-xs-10">
        <div class='input-group date' id='datetimepicker'>
          <%= form.text_field :expired_at ,:placeholder=>"Expired at ...",:class=>"form-control" ,"data-format"=>"YYYY/MM/DD HH:mm"%>
          <span class="input-group-addon"><span class="glyphicon glyphicon-calendar"></span>
          </span>
        </div>
      </div>
      <div class="col-xs-1"></div>
    </div>
  </div>
  <% end %>
<hr/>
  <div class="container">
    <div class="row-fluid">
      <div>
        <div class="form-group">
          <div class="controls">
            <%= form.submit :class=> "btn pull-right btn-primary" %>
          </div>
        </div>
      </div>
    </div>
  </div>

<% end %>

<script>
  (function($) {
    $(document).ready(function () {
      $('#datetimepicker').datetimepicker();
    });
  })(jQuery);
</script>